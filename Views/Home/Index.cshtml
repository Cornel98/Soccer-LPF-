</head>

<body>

    <div class="site-wrap">

        <div class="site-mobile-menu site-navbar-target">
            <div class="site-mobile-menu-header">
                <div class="site-mobile-menu-close">
                    <span class="icon-close2 js-menu-toggle"></span>
                </div>
            </div>
            <div class="site-mobile-menu-body"></div>
        </div>


        <header class="site-navbar py-4" role="banner">

            <div class="container">
                <div class="d-flex align-items-center">
                    <div class="site-logo">
                        <a href="index.html">
                            <img src="images/logo.png" alt="Logo">
                        </a>
                    </div>
                    <div class="ml-auto">
                        <nav class="site-navigation position-relative text-right" role="navigation">
                            <ul class="site-menu main-menu js-clone-nav mr-auto d-none d-lg-block">
                                <li><a href="@Url.Action("Index", "Home")" class="nav-link">Acasa</a></li>
                                <li><a href="@Url.Action("Index", "Meciuri")" class="nav-link">Meciuri</a></li>
                                <li><a href="@Url.Action("Index", "Echipe")" class="nav-link">Echipe</a></li>
                                <li><a href="@Url.Action("Index", "Stadioane")" class="nav-link">Stadioane</a></li>
                            </ul>
                        </nav>

                        <a href="#" class="d-inline-block d-lg-none site-menu-toggle js-menu-toggle text-black float-right text-white">
                            <span class="icon-menu h3 text-white"></span>
                        </a>
                    </div>
                </div>
            </div>

        </header>
    </div>

    <div class="hero overlay" style="background-image: url('images/bg_3.jpg');">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-5 ml-auto">
                    <h1 class="text-white">Liga Profesionista de Fotbal</h1>
                    <p></p>
                    <div id="date-countdown"></div>
                </div>
            </div>
        </div>
    </div>

    @model IEnumerable<PROIECTDaw.Models.DTOs.EchipeDTO>

    @if (Model != null && Model.Any())
    {
        <div class="row">
            <!-- Echipa 1 -->
            <div class="col-lg-6">

                @if (Model.ElementAtOrDefault(0) != null)
                {
                    var echipa1 = Model.ElementAt(1);
                    <div class="team-vs" id="team-@echipa1.IdEchipa">
                        <div class="team-details w-100 text-center">

                            <img src="@Url.Content($"~/PozeBD/{echipa1.Emblema}")" alt="@echipa1.Nume - Emblema" class="img-fluid">
                            <h3>@echipa1.Nume</h3>
                            <ul class="list-unstyled">
                                <li><strong>Valoare echipă:</strong> @echipa1.ValoareEchipa</li>
                                <li><strong>Data înființare:</strong> @echipa1.DataInfiintare.ToString("dd/MM/yyyy")</li>
                            </ul>
                        </div>
                    </div>
                }
            </div>




            <!-- Echipa 2 -->
            <div class="col-lg-6">
                @if (Model.ElementAtOrDefault(1) != null)
                {
                    var echipa2 = Model.ElementAt(2);
                    <div class="team-vs" id="team-@echipa2.IdEchipa">
                        <div class="team-details w-100 text-center">
                            <img src="@Url.Content($"~/PozeBD/{echipa2.Emblema}")" alt="@echipa2.Nume - Emblema" class="img-fluid" />
                            <h3>@echipa2.Nume </h3>
                            <ul class="list-unstyled">
                                <li><strong>Valoare echipă:</strong> @echipa2.ValoareEchipa</li>
                                <li><strong>Data înființare:</strong> @echipa2.DataInfiintare.ToString("dd/MM/yyyy")</li>
                            </ul>
                        </div>
                    </div>
                }
            </div>
        </div>
    }


    <div class="latest-news">

        <div class="site-section bg-dark">
            <div class="container">
                <div class="row">
                    <div class="col-lg-6">
                        <div class="widget-next-match">
                            <div class="widget-title">
                                <h3>Urmatorul meci</h3>
                            </div>
                            <div class="widget-body mb-3">
                                <div class="widget-vs">
                                    <div class="d-flex align-items-center justify-content-around justify-content-between w-100">
                                        <div class="team-1 text-center">
                                            <img src="~/PozeBD/buzau.png" alt="Image">
                                            <h3>Gloria Buzau</h3>
                                        </div>
                                        <div>
                                            <span class="vs"><span>VS</span></span>
